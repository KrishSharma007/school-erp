# School ERP - Environment Variables Template
# Copy this file to config.env and fill in your actual values

# Production Environment Configuration
NODE_ENV=production
PORT=5001
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
JWT_SECRET=your_secure_jwt_secret_here_make_it_long_and_random

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h

# Development Configuration (for local development)
# NODE_ENV=development
# CORS_ORIGIN=http://localhost:5173 